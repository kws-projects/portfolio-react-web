{
  "name": "portfolio-react-web",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@sentry/cli": "^2.32.1",
    "@sentry/react": "^8.9.2",
    "@tanstack/react-query": "^5.49.2",
    "@types/p5": "^1.7.6",
    "axios": "^1.7.2",
    "dayjs": "^1.11.11",
    "dompurify": "^3.1.5",
    "enum-values": "^1.2.1",
    "framer-motion": "^11.3.24",
    "i18next": "^23.11.3",
    "p5": "^1.9.3",
    "qs": "^6.13.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-ga4": "^2.1.0",
    "react-helmet-async": "^2.0.5",
    "react-i18next": "^15.0.1",
    "react-icons": "^5.2.1",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.23.0",
    "react-scripts": "^5.0.1",
    "remark-gfm": "^4.0.0",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "dev": "cp .env.development.local .env && react-scripts start",
    "prod": "cp .env.production.local .env && react-scripts start",
    "test:dev": "cp .env.development.local .env && react-scripts test",
    "test:prod": "cp .env.production.local .env && react-scripts test",
    "build:dev": "cp .env.development.local .env && react-scripts build",
    "build:prod": "cp .env.production.local .env && react-scripts build && npm run sentry:sourcemaps",
    "create-container:dev": "cp .env.development.local .env && docker-compose --project-name portfolio up -d",
    "create-container:prod": "cp .env.production.local .env && docker-compose --project-name portfolio up -d",
    "upload-source-maps": "npx @sentry/wizard@latest -i sourcemaps",
    "prettier": "npx prettier . --write",
    "eject": "react-scripts eject",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org kenneth-wong --project portfolio-react-web ./build && sentry-cli sourcemaps upload --org kenneth-wong --project portfolio-react-web ./build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "pre-push": "tsc"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.1.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.3"
  },
  "overrides": {
    "nth-check": "^2.0.1",
    "postcss": "^8.4.31"
  }
}
